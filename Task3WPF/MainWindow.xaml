<Window x:Class="TaskWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#FF494949">
        <TextBox x:Name="OutputTextBox" HorizontalAlignment="Left" Height="290" Margin="85,110,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="619" IsEnabled="False" KeyDown="OutputTextBox_KeyDown"/>
        <Button Content="Open File&#xD;&#xA;" HorizontalAlignment="Left" Margin="635,19,0,0" VerticalAlignment="Top" Width="128" Height="22" Click="OpenFileButton_Click"/>
        <Label Content="Choose txt File" HorizontalAlignment="Left" Margin="326,19,0,0" VerticalAlignment="Top" FontFamily="Masque" Foreground="Snow"/>
        <Button x:Name="ClearButton" Content="Clear" HorizontalAlignment="Left" Margin="347,71,0,0" VerticalAlignment="Top" Width="82" Height="21" RenderTransformOrigin="0.317,0.571" Click="ClearButton_Click"/>
        <Button Content="SaveFile" HorizontalAlignment="Left" Margin="635,41,0,0" VerticalAlignment="Top" Width="128" Height="22" Click="SaveButton_Click"/>



    </Grid>
</Window>
